{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchPackageNames": ["opencode-ai"],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["at any time"],
      "groupName": "opencode-ai updates",
      "description": "Auto-merge opencode-ai dependency updates when CI passes",
      "bumpVersion": "patch"
    }
  ]
}
